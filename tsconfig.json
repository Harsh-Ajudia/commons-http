{
    "compilerOptions": {
        "lib": [
            "es2020",
            "dom"
        ],
        "rootDirs": [
            "tests",
            "src",
        ],
        "strict": true,
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./",
        "noEmitOnError": true,
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "experimentalDecorators": true,
        "composite": true,
        "declarationMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "index.ts",
        "src/**/*.ts",
        "types/**/*.ts",
        "test.ts"
    ]
}